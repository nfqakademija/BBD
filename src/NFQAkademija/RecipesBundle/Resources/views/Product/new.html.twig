{#{% extends '::base.html.twig' %}#}
{% block content %}
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.category) }}
    {{ form_row(form.unit) }}
    {{ form_row(form.photo) }}
    {{ form_row(form.save) }}
    {{ form_end(form) }}
    <hr>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Pavadinimas</th>
            <th>Kategorija</th>
            <th>Vienetai</th>
            <th>Foto</th>
        </tr>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.category }}</td>
                <td>{{ entity.unit }}</td>
                <td>{{ entity.photo }}</td>
            </tr>
            {% endfor %}
    </table>
{% endblock %}