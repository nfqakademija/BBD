<div class='ingredient untouchable' id='{{ type }}-{{ id }}' onclick="select_ingredient('{{ id }}')">
    <div class='ingredient_image' style='background-image:url("{{ imageUrl }}")'></div>
    <div class='ingredient_text'>{{ title }}</div>
    <div class='ingredient_size'>{{ quantity }} {{ unit }}</div>
    <div class='ingredient_indicator ingredient_indicator_{{ indicator }}' id='ingredient_indicator_{{ id }}'></div>
</div>