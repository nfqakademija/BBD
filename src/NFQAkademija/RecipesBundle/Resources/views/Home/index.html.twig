 {% block specific_scripts %}
     <script type="text/javascript">
         function loader(){

             recipe_size = calculate_recipe_size();
             append_recipes();
             sidebar_manipulation();
             $( window ).resize(function() {
                 recalculate_width();
                 sidebar_manipulation()
             });
             initialize_scrollbar();
             $("#content_wrapper").scroll(function(){
                 scrolled = $("#content_wrapper").scrollTop();
                 if(scrolled > 400)
                     toast_top('show');
                 else
                     toast_top('hide');

                 var scroll_height = $("#content_wrapper")[0].scrollHeight;
                 var item_height = $("#content_wrapper").css('height');
                 item_height = parseInt(item_height.replace('px'));
                 var height = scroll_height - item_height;
                 var height_constant = 100;
                 if(height - scrolled <= height_constant){
                     load_more();
                 }
             });
         }

         var load_more_end = false;
         var loading_more_status = false;
         function load_more(){
             if(!loading_more_status && !load_more_end){
                 loading_more_status = true;
                 recipe_size = calculate_recipe_size();
                 show_loading_more();
                 var recipes = [];
                 recipes[0] = ["0","/images/food (0).jpg", "title0"];
                 recipes[1] = ["1","/images/food (1).png", "title0"];
                 recipes[2] = ["2","/images/food (2).jpg", "title0"];
                 recipes[3] = ["3","/images/food (3).jpg", "title0"];
                 recipes[4] = ["4","/images/food (4).jpg", "title0"];
                 recipes[5] = ["5","/images/food (5).jpg", "title0"];
                 hide_loading_more();
                 for(i = 0; i < recipes.length; i++){
                     append_recipe(recipes[i]);
                 }

                 loading_more_status = false;
                 load_more_end = true;
                 /*
                 $.ajax({
                     type: 'POST',
                     url: 'ajax.php',
                     data: { load_more: 'true'},
                     beforeSend:function(){
                         if(!load_more_end)
                             show_loading();
                     },
                     success:function(data){
                         loading_more_status = false;
                         var data = " ";
                         if(data != ""){
                             hide_loading();
                         }else if(data == ""){
                             hide_loading();
                             load_more_end = true;
                         }
                     }
                 });
                  */
             }
         }

         function key_check(event){

         }
     </script>
 {% endblock %}



